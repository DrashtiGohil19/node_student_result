<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link rel="stylesheet" href="../style.css">


<form method="post" class="mt-3 p-4">
    <h4 class="text-center mb-4">UPDATE STUDENT RESULT</h4>
    <table style="width: 50%;" class="m-auto">
        <% results.forEach(function(update){ %>
        <tr>
            <td><label class="form-label">NAME</label></td>
            <td><input type="text" class="form-control mb-3" name="name" value="<%= update.name %>"></td>
        </tr>
        <tr>
            <td><label class="form-label">ROLL NO</label></td>
            <td><input type="number" class="form-control mb-3" name="rollnu" value="<%= update.rollnu %>"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 1</label></td>
            <td><input type="number" class="form-control mb-3" name="sub1" value="<%= update.sub1 %>"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 2</label></td>
            <td><input type="number" class="form-control mb-3" name="sub2" value="<%= update.sub2 %>"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 3</label></td>
            <td><input type="number" class="form-control mb-3" name="sub3" value="<%= update.sub3 %>"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 4</label></td>
            <td><input type="number" class="form-control mb-3" name="sub4" value="<%= update.sub4 %>"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 5</label></td>
            <td><input type="number" class="form-control mb-3" name="sub5" value="<%= update.sub5 %>"></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit" class="btn btn-primary">Submit</button></td>
        </tr>
        <% }); %>
    </table>    
</form>