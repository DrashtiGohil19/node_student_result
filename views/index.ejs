<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link rel="stylesheet" href="../style.css">

<form method="post" class="mt-3 p-4">
    <h4 class="text-center mb-4">STUDENT RESULT</h4>
    <table style="width: 50%;" class="m-auto">
        <tr>
            <td><label class="form-label">NAME</label></td>
            <td><input type="text" class="form-control mb-3" name="name"></td>
        </tr>
        <tr>
            <td><label class="form-label">ROLL NO</label></td>
            <td><input type="number" class="form-control mb-3" name="rollnu"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 1</label></td>
            <td><input type="number" class="form-control mb-3" name="sub1"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 2</label></td>
            <td><input type="number" class="form-control mb-3" name="sub2"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 3</label></td>
            <td><input type="number" class="form-control mb-3" name="sub3"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 4</label></td>
            <td><input type="number" class="form-control mb-3" name="sub4"></td>
        </tr>
        <tr>
            <td><label class="form-label">SUBJECT 5</label></td>
            <td><input type="number" class="form-control mb-3" name="sub5"></td>
        </tr>
        <tr>
            <td></td>
            <td><button type="submit" class="btn btn-primary">Submit</button></td>
        </tr>
    </table>    
</form>

<table class="table table-success table-striped-columns text-center container border border-black">
    <tr>
        <th>Name</th>
        <th>Roll Nu</th>
        <th>Subject 1</th>
        <th>Subject 2</th>
        <th>Subject 3</th>
        <th>Subject 4</th>
        <th>Subject 5</th>
        <th>Total</th>
        <th>Min</th>
        <th>Max</th>
        <th>Percentage</th>
        <th>Grade</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    <% results.forEach(function(u) { %>
    <tr>
        <td><%= u.name %></td>
        <td><%= u.rollnu %></td>
        <td><%= u.sub1 %></td>
        <td><%= u.sub2 %></td>
        <td><%= u.sub3 %></td>
        <td><%= u.sub4 %></td>
        <td><%= u.sub5 %></td>
        <td><%= u.total %></td>
        <td><%= u.min %></td>
        <td><%= u.max %></td>
        <td><%= u.percentage %></td>
        <td><%- u.grade %></td>
        <td>
            <a href="update/<%= u.id %>">Update</a>
        </td>
        <td>
            <a href="delete/<%= u.id %>">Delete</a>
        </td>
    </tr>
    <% }); %>
</table>



